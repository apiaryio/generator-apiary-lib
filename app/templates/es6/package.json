{
  "name": "<%= packageName %>",
  "nicename": "<%= name %>",
  "version": "0.0.1",
  "description": "<%= description %>",
  "main": "./lib",
  "scripts": {
    "lint": "eslint --ext .js,.es6",
    "precompile": "npm run lint",
    "compile": "babel src --out-dir lib",
    "preserver-test": "npm run compile",
    "prebrowser-test": "npm run compile",
    "server-test": "mocha --compilers es6:babel/register -R spec --recursive",
    "browser-test": "karma start",
    "test": "npm run server-test && npm run browser-test",
    "prepublish": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://<%= gitUrl %>"
  },
  "author": "<%= company %> <support@apiary.io>",
  "license": "<% if (locals.license) { %><%= license %><% } else { %>N/A<% } %>",
  "devDependencies": {
    "babel": "",
    "babel-eslint": "",
    "babelify": "",
    "eslint": "",
    "eslint-config-airbnb": "",
    "chai": "",
    "karma": "",
    "karma-browserify": "",
    "karma-chai": "",
    "karma-firefox-launcher": "",
    "karma-mocha": "",
    "karma-mocha-reporter": "",
    "mocha": ""
  }
}
